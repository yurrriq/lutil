{erl_opts, [debug_info]}.

{lfe_first_files, []}.

{eunit_compile_opts, [
   {src_dirs, ["test", "src"]}
  ]}.

{deps, [lfe]}.

{plugins, [rebar3_lfe_compile]}.

{project_plugins, [
   {'lfe-version', {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.3.0"}}}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.

{profiles, [
   {test, [
      {deps, [
         {ltest, {git, "https://github.com/lfex/ltest.git", {tag, "0.8.0"}}}
        ]}
     ]}
  ]}.
